rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow the admin user to read all user documents
    match /users/{userId} {
      allow get: if request.auth != null && request.auth.token.email == "venkattiwari42@gmail.com";
    }

    // Allow the admin user to read all orders from any user
    match /{path=**}/orders/{orderId} {
      allow read: if request.auth != null && request.auth.token.email == "venkattiwari42@gmail.com";
    }
  }
}